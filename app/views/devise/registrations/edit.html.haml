%h1.text-4xl.text-center.font-thin Account
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal w-3/4 mx-auto", method: :put }) do |f|
  = devise_error_messages!
  .flex.flex-col.mt-4
    = f.text_field :name, autofocus: false, class: 'flex-grow input', placeholder: "Full Name"
  .flex.flex-col.mt-4
    = f.email_field :email, class: 'flex-grow input', placeholder: 'Email Address'
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    .alert.alert-warning
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .flex.flex-col.mt-4
    = f.password_field :password, autocomplete: "off", class: 'flex-grow input', placeholder: 'Password'
    %p.form-text.text-muted
      %small Leave password blank if you don't want to change it
  .flex.flex-col.mt-4
    = f.password_field :password_confirmation, autocomplete: "off", class: 'flex-grow input', placeholder: 'Confirm Password'
  .flex.flex-col.mt-4
    = f.password_field :current_password, autocomplete: "off", class: 'flex-grow input', placeholder: 'Current Password'
    %p.form-text.text-muted
      %small We need your current password to confirm your changes
  .flex.flex-col.mt-8
    = f.submit "Save Changes", class: "btn btn-primary"
.text-center.mt-4
  = link_to "Deactivate my account", registration_path(resource_name), class: 'no-underline hover:underline text-blue-dark', data: { confirm: "Are you sure? You cannot undo this." }, method: :delete
